{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Error!</strong> {{ error }}
    </div>
    {% endif %}
    <div class="form-group">
        <label for="donor-input">Donor Name:</label>
        <input type="text" class="form-control" id="donor-input" name="donor">
    </div>
    <div class="form-group">
        <label for="amount-input">Amount:</label>
        <input type="number" class="form-control" id="amount-input" name="amount">
    </div>
    <button type="submit" class="btn btn-primary">Submit Donation</button>
</form>
{% endblock content %}